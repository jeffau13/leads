doctype html
html(lang='en')
  include common/head.pug
  +head("Starter MVP ")
  body
    h1= title
    p Welcome to #{title}
    form(action="/",method ="POST")
      input(type="email",name ="lead_email", placeholder ="Enter your email address here")
      button(type="submit") Submit
    if leads
      h1 List of leads
      for lead in leads
        p(id=lead.id)
        span #{lead.email}
        | 
        a(href="/lead/"+ lead.id) Details
        | 
        button(onclick=`deleteLead('${lead.id}')`) Delete
    include common/footer.pug
    +footer()
    script(src="/javascripts/leads.js") 
